{
  "compilerOptions": {
    "target": "es2016" /* Set the JavaScript version for emitted code */,
    "module": "commonjs" /* CommonJS module system for Node.js */,
    "moduleResolution": "node" /* Module resolution strategy */,
    "esModuleInterop": true /* Enable compatibility with CommonJS modules */,
    "forceConsistentCasingInFileNames": true /* Ensure consistent casing for file names */,
    "strict": true /* Enable all strict type-checking options */,
    "skipLibCheck": true /* Skip type checking of declaration files */,
    "noUnusedLocals": true /* Report unused local variables */,
    "noUnusedParameters": true /* Report unused function parameters */,
    "noImplicitReturns": true /* Ensure all functions have explicit return values */,
    "noFallthroughCasesInSwitch": true /* Prevent fallthrough in switch statements */,
    "outDir": "./dist" /* Output directory for compiled files */,
    "rootDir": "./src" /* Root directory for source files */,
    "resolveJsonModule": true /* Enable importing JSON files */,
    "typeRoots": ["./node_modules/@types"] /* Type definition files location */,
    "types": [
      "node",
      "express"
    ] /* Include type definitions for Node.js and Express */,
    "baseUrl": "./src" /* Base directory for module resolution */,
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ] /* Define custom paths for module resolution */
    }
  },
  "include": [
    "src/**/*.ts" /* Include all TypeScript files in the src folder */,
    "src/**/*.d.ts" /* Include all type declaration files */
  ],
  "exclude": [
    "node_modules" /* Exclude the node_modules folder */,
    "dist" /* Exclude the dist folder */
  ]
}
